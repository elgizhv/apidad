{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "CommonJS",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "ES2019",
    "allowJs": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strict": true,
    "strictFunctionTypes": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": false,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [".templates"]
}
